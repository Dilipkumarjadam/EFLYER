@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" type="text/css" href="~/css/AdminIndex.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header>
        <h1>Admin Panel</h1>
        <div class="search-bar">
            <input type="text" id="searchInput" placeholder="Search...">
            <button id="searchButton"><i class="fas fa-search"></i></button>
        </div>
    </header>
    <main>
        <section class="actions">
            <a href="@Url.Action("CreateProduct","Admin")" class="action-button add-product">Add Product</a>
            <a href="@Url.Action("GetProduct","Admin")" class="action-button delete-product">Delete Product</a>
            <a href="@Url.Action("GetProduct","Admin")" class="action-button edit-product">Edit Product</a>
            <a href="@Url.Action("CreateProduct","Admin")" class="action-button view-users">View Users</a>
        </section>
        <section class="user-info">
            <h2>User Information</h2>
            <div id="userList">
                <!-- User info will be dynamically loaded here -->
            </div>
        </section>
    </main>
    <footer>
        <p>&copy; 2024 DilipKumar Jadam</p>
    </footer>
    <script src="scripts.js"></script>
</body>
</html>
